# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET 	/api-docs 					controllers.ApiHelpController.getResources
GET  	/swagger  					@controllers.Application.swagger
GET 	/put/:input 				@controllers.Application.kinesisPut(input: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET 	/api-docs/users 			controllers.ApiHelpController.getResource(path="/users")
GET 	/users/:id 					@controllers.UserController.getUser(id: String)
PUT 	/users 						@controllers.UserController.initUser
PUT 	/users/:id/greet			@controllers.UserController.greetUser(id: String)

# PUT 	/users/:userid/mailing 		@controllers.UserController.mailing(userid: String)
# GET 	/users/:userid/inbox 		@controllers.UserController.inbox(userid: String)